<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<TextView
    android:id="@+id/bottom_sheet_shiur_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Shiur Title"
    android:textAlignment="center"
    android:textAppearance="?attr/textAppearanceHeadline6"
    android:paddingBottom="5dp"
    android:paddingTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textAlignment="center"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Series"
        android:textAlignment="center"
        android:paddingBottom="5dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="45:16 min - 2.5 MB"
        android:textAlignment="center"
        android:paddingBottom="20dp"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="View speaker"
        app:icon="@drawable/ic_person"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"

        android:text="Add to playlist"
        app:icon="@drawable/ic_playlist_add"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Download"
        app:icon="@drawable/ic_cloud_download"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"

        android:text="Share"
        app:icon="@drawable/ic_share"
        android:textAlignment="textStart"/>
    <ImageButton
        android:id="@+id/favorite_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@android:drawable/btn_star" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Favorite"
        app:icon="@android:drawable/btn_star"
        android:textAlignment="textStart"/>


</LinearLayout><!--    </androidx.core.widget.NestedScrollView>-->
