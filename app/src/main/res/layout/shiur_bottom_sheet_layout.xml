<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bottom_sheet_shiur_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Shiur Title"
            tools:textAlignment="center"
            tools:textAppearance="?attr/textAppearanceHeadline6"
            android:paddingBottom="5dp"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/bottom_sheet_shiur_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Category: Lorem Ipsum"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/bottom_sheet_shiur_series"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Series: Dolor Sit"
            android:paddingBottom="5dp" />

        <TextView
            android:id="@+id/bottom_sheet_shiur_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Speaker: Consectetur Adipiscing Elit, Sed"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/bottom_sheet_shiur_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Length: 1 hr 45 min 16 sec" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_view_speaker_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="View speaker"
        app:icon="@drawable/ic_person"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_add_to_playlist_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="Add to playlist"
        app:icon="@drawable/ic_playlist_add"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_download_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Download"
        app:icon="@drawable/ic_cloud_download"
        android:textAlignment="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_share_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"

        android:text="Share"
        app:icon="@drawable/ic_share"
        android:textAlignment="textStart"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_favorite_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"

        android:text="Favorite"
        app:icon="@drawable/ic_gold_star"
        android:textAlignment="textStart"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottom_sheet_more_from_this"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"

        android:text="More From This..."
        app:icon="@drawable/ic_more"
        android:textAlignment="textStart"/>
    </LinearLayout>
